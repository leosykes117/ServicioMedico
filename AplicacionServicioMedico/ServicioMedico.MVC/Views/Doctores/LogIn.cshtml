@model ServicioMedico.BO.Usuario

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_PlantillaLogin.cshtml";
}

@if (ViewBag.MensajesError != null)
            {
    <div id="mensajes" class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i> Error
        </strong>
        <span id="textoMsm">@ViewBag.MensajesError</span>
    </div>
}


<div class="well texto">
    <label>Inicia tu Sesi&oacute;n</label>
    @using (Html.BeginForm("LogIn", "Doctores", FormMethod.Post, new { id = "frmLogin", @class = "form-horizontal", autocomplete = "off", accept_charset = "utf-8" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user-md fa-lg" aria-hidden="true"></i></div>
                @Html.TextBox("Email", null, new { id = "txtUsuario", @class = "form-control", placeholder = "Email", autofocus = true })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></div>
                @Html.Password("Password", null, new { id = "txtPassword", @class = "form-control", placeholder = "Password" })
            </div>
        </div>

        <button id="btnIniciar" class="btn btn-primario btn-lg btn-block">Iniciar Sesión</button>
    }
    <p>¿No tienes una cuenta? @Html.ActionLink("Registrate", "Registro", "Doctores", null, new { @class = "btn btn-link" })</p>
</div>

@section scripts {
    <script src="~/Scripts/scriptsVistas/login.js"></script>
}
