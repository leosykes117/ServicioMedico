</div>

<!--TABLA DOCENTES-->
<div class="row" id="Docentes">
    <h2>Tabla Docentes</h2>
    <div class="table-responsive">
        <table id="tbDocentes" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Numero de Docente</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
