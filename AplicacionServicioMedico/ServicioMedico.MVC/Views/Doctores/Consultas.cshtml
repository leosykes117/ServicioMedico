@section HojasEstilo{
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/snackbar.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Consultas";
    Layout = "~/Views/Shared/_MenuPrincipal.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Forms
        </h1>
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
            Agregar Paciente
        </button>

        <br><br>
    </div>
</div>
<!-- <row> -->

<div class="container">
    <div class="row">
        <h2>Basic Table</h2>
        <form class="form-inline">
            <div class="form-group">
                <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-users" aria-hidden="true"></i></div>
                    <select id="cmbTipoBuscar" class="form-control">
                        <option value="1">Alumno</option>
                        <option value="2">Docente</option>
                        <option value="3">PAAE</option>
                        <option value="4">Externo</option>
                    </select>
                </div>
            </div>
        </form>
        <br />
        <div class="table-responsive">
            <table id="tbPacientes" class="table table-hover">
                <thead class="">
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Modal title</h4>
            </div>
            <form method="post" autocomplete="off">
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-heading">Datos del Paciente</div>
                        <div class="panel-body">
                            <div class="row text-center">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-users" aria-hidden="true"></i>
                                            </div>
                                            <!-- COMBO BOX TIPO DE PACIENTE -->
                                            <select id="cmbTipo" class="form-control">
                                                <option value="1">Alumno</option>
                                                <option value="2">Docente</option>
                                                <option value="3">PAAE</option>
                                                <option value="4">Externo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX NOMBRE -->
                                            <div class="input-group-addon"><i class="fa fa-wheelchair" aria-hidden="true"></i></div>
                                            <input type="text" id="txtNombre" class="form-control" placeholder="Nombre Paciente">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX APELLIDOS -->
                                            <div class="input-group-addon"><i class="fa fa-wheelchair" aria-hidden="true"></i></div>
                                            <input type="text" id="txtApellidos" class="form-control" placeholder="Apellidos Paciente">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW NOMBRE Y APELLIDOS -->
                            <div class="row text-center">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- COMBO BOX GENERO -->
                                            <div class="input-group-addon"><i class="fa fa-venus-mars" aria-hidden="true"></i></div>
                                            <select id="cmbGenero" class="form-control" autofocus>
                                                <option value="1">Masculino</option>
                                                <option value="2">Femenino</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW GENERO -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group date">
                                            <!-- DATE PICKER FECHA -->
                                            <div class="input-group-addon"><i class="fa fa-birthday-cake"></i></div>
                                            <input type='text' id="dtpFechaNac" class="form-control" placeholder="Fecha de Nacimiento" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX EDAD -->
                                            <div class="input-group-addon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                                            <input type="text" id="txtEdad" class="form-control" placeholder="Edad Paciente">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW FECHA Y EDAD -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group date">
                                            <!-- TEXT BOX CURP -->
                                            <div class="input-group-addon"><i class="fa fa-address-card"></i></div>
                                            <input type='text' id="txtCurp" class="form-control" placeholder="CURP" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW CURP-->
                        </div>
                    </div>
                    <!-- FIN DEL PANEL 1 -->

                    <div class="panel panel-default">
                        <div class="panel-heading">Datos de Domicilio</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="fa fa-map" aria-hidden="true"></i></div>
                                            <!-- COMBO BOX ESTADO -->
                                            <select id="cmbEstado" class="form-control">
                                                <option value="1">Ciudad de México</option>
                                                <option value="2">Estado de México</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- COMBO BOX DEL O MUN -->
                                            <div class="input-group-addon"><i class="fa fa-map-signs" aria-hidden="true"></i></div>
                                            <select id="cmbMunicipio" class="form-control">
                                                <option value="1">Álvaro Obregón</option>
                                                <option value="2">Azcapotzalco</option>
                                                <option value="3">Benito Juárez</option>
                                                <option value="4">Coyoacán</option>
                                                <option value="5">Cuajimalpa</option>
                                                <option value="6">Cuauhtémoc</option>
                                                <option value="7">Gustavo A. Madero</option>
                                                <option value="8">Iztacalco</option>
                                                <option value="9">Iztapalapa</option>
                                                <option value="10">Magdalena Contreras</option>
                                                <option value="11">Miguel Hidalgo</option>
                                                <option value="12">Milpa Alta</option>
                                                <option value="13">Tláhuac</option>
                                                <option value="14">Tlalpan</option>
                                                <option value="15">Venustiano Carranza</option>
                                                <option value="16">Xochimilco</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW ESTADO-->

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX COLONIA -->
                                            <div class="input-group-addon"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
                                            <input type="text" id="txtColonia" class="form-control" placeholder="Colonia" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX CP -->
                                            <div class="input-group-addon"><i class="fa fa-envelope-open" aria-hidden="true"></i></div>
                                            <input type="text" id="txtCP" class="form-control" placeholder="Codigo Postal" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW COL Y CP-->

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX CALLE -->
                                            <div class="input-group-addon"><i class="fa fa-road" aria-hidden="true"></i></div>
                                            <input type="text" id="txtCalle" class="form-control" placeholder="Calle" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX NUM INT -->
                                            <div class="input-group-addon">
                                                <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i>
                                            </div>
                                            <input type="text" id="txtInt" class="form-control" placeholder="Num Int" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX NUM EXT -->
                                            <div class="input-group-addon"><i class="fa fa-sort-numeric-asc" aria-hidden="true"></i></div>
                                            <input type="text" id="txtExt" class="form-control" placeholder="Num Ext" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW CALLE, INT, EXT -->
                        </div>
                    </div>
                    <!-- FIN DEL PANEL 2 -->

                    <div class="panel panel-default">
                        <div class="panel-heading">Datos de Contacto</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX CEL -->
                                            <div class="input-group-addon"><i class="fa fa-mobile" aria-hidden="true"></i></div>
                                            <input type="text" id="txtCelular" class="form-control" placeholder="Celular" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX TEL -->
                                            <div class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></div>
                                            <input type="text" id="txtTelefono" class="form-control" placeholder="Telefono" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX CORREO -->
                                            <div class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
                                            <input type="text" id="txtCorreo" class="form-control" placeholder="Correo">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW -->
                        </div>
                    </div>
                    <!-- FIN DEL PANEL 3 -->

                    <div id="datosAlumno" class="panel panel-default">
                        <div class="panel-heading">Datos del Alumno</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXBOX BOLETA-->
                                            <div class="input-group-addon"><i class="fa fa-id-card-o" aria-hidden="true"></i></div>
                                            <input type="text" id="txtBoleta" class="form-control" placeholder="Boleta o PM">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX GRUPO-->
                                            <div class="input-group-addon"><i class="fa fa-university" aria-hidden="true"></i></div>
                                            <input type="text" id="txtGrupo" class="form-control" placeholder="Grupo">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW BOLETA Y GRUPO -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- COMBO BOX CARRERA -->
                                            <div class="input-group-addon"><i class="fa fa-graduation-cap" aria-hidden="true"></i></div>
                                            <select id="cmbCarrera" class="form-control">
                                                <option value="1">Tronco Común</option>
                                                <option value="2">Técnico en Informática</option>
                                                <option value="3">Técnico en Administración</option>
                                                <option value="4">Técnico en Contabilidad</option>
                                                <option value="5">Técnico en Administración de Empresas Turísticas</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- FIN DEL ROW CARRERA -->
                        </div>
                    </div>
                    <!-- FIN PANEL ALUMNOS -->

                    <div id="datosPersonal" class="panel panel-default">
                        <div class="panel-heading">Datos del Personal Escolar</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX NUM EMPLEADO -->
                                            <div class="input-group-addon"><i class="fa fa-id-card-o" aria-hidden="true"></i></div>
                                            <input type="text" id="txtNumEmp" class="form-control" placeholder="Numero de Empleado">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <!-- TEXT BOX RFC -->
                                            <div class="input-group-addon"><i class="fa fa-id-card-o" aria-hidden="true"></i></div>
                                            <input type="text" id="txtRFC" class="form-control" placeholder="RFC">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <p id="mensajeError" class="text-danger"></p>
                        </div>
                        <div class="col-sm-6">
                            <button type="button" id="btnCancelarPaciente" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" id="btnAgregarPaciente" class="btn btn-primary">Agregar Paciente</button>
                        </div>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Agregar Paciente</h4>
            </div>
            <form id="frmEnviarDatos" action="~/Consultas/Index" method="post" class="form-inline" autocomplete="off">
                <div class="modal-body">
                    <label for="txtnomEnviar" class="col-sm-6 control-label">¿Seguro(a) que deseas realizar la consulta a la paciente?</label>
                    <input type="hidden" name="id" id="txtidEnviar" style="border:none; border-color:transparent;" readonly="readonly" />
                    <input type="text" name="nom" id="txtnomEnviar" style="border:none; border-color:transparent;" readonly="readonly" />
                    <input type="hidden" name="edad" id="txtedadEnviar" style="border:none; border-color:transparent;" readonly="readonly" />
                    <input type="hidden" name="genero" id="txtgeneroEnviar" style="border:none; border-color:transparent;" readonly="readonly" />
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <button type="button" id="btnCancelarConsulta" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button type="submit" id="btnMandarDatos" class="btn btn-primary">Pasar a Consulta</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="bg-danger" id="snackbar"></div>
@section scripts{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/scriptsVistas/snackbar.min.js"></script>
    <script src="~/Scripts/scriptsVistas/consultas.js"></script>
}