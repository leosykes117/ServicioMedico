@section HojasEstilo{
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/snackbar.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Ver Consultas";
    Layout = "~/Views/Shared/_MenuPrincipal.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1 id="encabezadoPagina" class="page-header">Consultas</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
        <form action="" class="form-inline">
            <div class="form-group">
                <input type="hidden" id="Estatus" value="1" />
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-users fa-lg" aria-hidden="true"></i></div>
                    <select id="cmbTipoPaciente" class="form-control" aria-describedby="helpBlock">
                        <option value="1">Alumno</option>
                        <option value="2">Docente</option>
                        <option value="3">PAAE</option>
                        <option value="4">Externo</option>
                    </select>
                </div>
                <span id="helpBlock" class="help-block">Seleccione un tipo de paciente</span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-calendar fa-lg" aria-text="true"></i></div>
                    <select id="cmbMesBuscar" name="MesBuscar" class="form-control" aria-describedby="helpMes">
                        <option value="0">-Mes-</option>
                        <option value="1">Enero</option>
                        <option value="2">Febrero</option>
                        <option value="3">Marzo</option>
                        <option value="4">Abril</option>
                        <option value="5">Mayo</option>
                        <option value="6">Junio</option>
                        <option value="7">Julio</option>
                        <option value="8">Agosto</option>
                        <option value="9">Septiembre</option>
                        <option value="10">Octubre</option>
                        <option value="11">Noviembre</option>
                        <option value="12">Diciembre</option>
                    </select>
                </div>
                <span id="helpMes" class="help-block">Seleccione un mes a buscar</span>
            </div>
        </form>
    </div>
    <div class="col-md-3">@Html.ActionLink("Click Aqui para ver las Consultas Eliminados", "ConsultasEliminadas", null, new { @class = "btn btn-link" })</div>
</div>


<!--TABLA ALUMNOS-->
