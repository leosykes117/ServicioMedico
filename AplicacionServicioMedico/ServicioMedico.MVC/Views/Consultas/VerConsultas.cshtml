<div class="row" style="margin-top: 15px;">
    <button type="button" id="recargartb" class="btn btn-info btn-block">Recargar Tabla <i class="fa fa-refresh" aria-hidden="true"></i></button>
</div>

<div class="modal fade" id="modalConsultaEditar">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Editar Consulta</h4>
            </div>
            @using (Html.BeginForm("EditarConsulta", "Consultas", FormMethod.Post,
                new { id = "frmEnviarDatosConsulta", @class = "form-horizontal", autocomplete = "off", accept_charset = "utf-8" }))
            {
                <div class="modal-body">
                    <p>¿Estas seguro que deseas editar esta consulta?</p>
                    <input type="hidden" name="id" id="txtClave" class="form-control">
                    <input type="hidden" name="nom" id="txtNombre" class="form-control">
                    <input type="hidden" name="edad" id="txtEdad" class="form-control">
                    <input type="hidden" name="genero" id="txtGenero" class="form-control">
                    <input type="hidden" name="Diagnostico" id="txtDiagnostico" class="form-control">
                    <input type="hidden" name="Observaciones" id="txtObservaciones" class="form-control" />
                    <input type="hidden" name="CveDoctor" id="txtCveDoctor" class="form-control" />
                    <input type="hidden" name="FechaConsulta" id="txtFecha" class="form-control">
                    <input type="hidden" name="HoraEntrada" id="txtHoraEntrada" class="form-control">
                    <input type="hidden" name="HoraSalida" id="txtHoraSalida" class="form-control">
                    <input type="hidden" name="Temperatura" id="txtTemperatura" class="form-control">
                    <input type="hidden" name="TA" id="txtTA" class="form-control">
                    <input type="hidden" name="FC" id="txtFC" class="form-control">
                    <input type="hidden" name="FR" id="txtFR" class="form-control">
                </div>
                <div class="modal-footer">
                    <p id="EditarError" class="pull-left text-danger"></p>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" id="btnEditarConsulta" name="EditarConsulta" class="btn btn-primario">Ir a Editar</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Eliminar Consulta</h4>
            </div>
            @using (Html.BeginForm("CambiarEstatus", "Consultas", FormMethod.Post,
                            new { id = "frmCambiarEstatus", @class = "form-horizontal", autocomplete = "off", accept_charset = "utf-8" }))
            {
                <div class="modal-body">
                    <p>¿Seguro que deseas eliminar esta consulta?</p>
                    <input type="hidden" id="txtConsultaDelete" name="consulta" />
                </div>
                <div class="modal-footer">
                    <p class="pull-left text-danger"></p>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" id="btnEliminarConsulta" class="btn btn-primario">Eliminar</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="bg-primary" id="snackbar"></div>

