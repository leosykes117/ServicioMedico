@section HojasEstilo{
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/snackbar.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "EditarConsulta";
    Layout = "~/Views/Shared/_MenuPrincipal.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="media page-header">
            <div class="media-body">
                <h1>Editar Consulta</h1>
            </div>
            <div class="media-right">
                <a class="thumbnail">
                    Sin Imagen
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="media">
        <div class="media-body">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Datos del Paciente</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-4 text-center">
                            <p style="border:0;border-bottom: 3px solid #71BCC8;margin-bottom:2px;">@ViewBag.nompaciente</p>
                            <strong>Nombre del Paciente</strong>
                        </div>

                        <div class="col-lg-4 text-center">
                            <p style="border:0;border-bottom: 3px solid #71BCC8;margin-bottom:2px;">@ViewBag.edadpaciente años</p>
                            <strong>Edad del Paciente</strong>
                        </div>

                        <div class="col-lg-4">
                            @{
                                var hombreAttr = new Dictionary<string, object>();
                                var mujerAttr = new Dictionary<string, object>();
                                bool hombreActive = false;
                                bool mujerActive = false;
                                if (ViewBag.generopaciente == "1" || ViewBag.generopaciente == "Masculino")
                                {
                                    hombreActive = true;
                                    hombreAttr.Add("id", "rdbMasculino");
                                    mujerAttr.Add("disabled", "disabled");
                                }
                                else
                                {
                                    mujerActive = true;
                                    mujerAttr.Add("id", "rdbFemenino");
                                    hombreAttr.Add("disabled", "disabled");
                                }
                            }
                            <label class="radio-inline">
                                <div class="switch">
                                    @Html.RadioButton("grpGenero", "Masculino", hombreActive, hombreAttr)
                                    <div class="slider round"></div>
                                </div>
                                <i class="fa fa-mars fa-3x"></i>
                            </label>
                            <label class="radio-inline">
                                <div class="switch">
                                    @Html.RadioButton("grpGenero", "Femenino", mujerActive, mujerAttr)
                                    <div class="slider mujer round"></div>
                                </div>
                                <i class="fa fa-venus fa-3x"></i>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="frmEditarConsulta" method="post" autocomplete="off" accept-charset="utf-8">
    <div class="row">
        <div class="col-lg-3">
            <div class="panel panel-default">
                <div class="panel-heading">Fecha y Tiempo de la Consulta</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class='input-group date'>
                            <span class="input-group-addon">
                                <i class="fa fa-calendar fa-lg"></i>
                            </span>
                            <input type='text' id="dtpFecha" name="FechaConsulta" class="form-control" value="@ViewBag.fecha" placeholder="Fecha" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <span class="input-group-addon">
                                <i class="fa fa-clock-o fa-lg"></i>
                            </span>
                            <input type='text' id="dtpHoraEntrada" name="HoraEntrada" class="form-control" value="@ViewBag.entrada" placeholder="Hora de Inicio" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <span class="input-group-addon">
                                <i class="fa fa-clock-o fa-lg"></i>
                            </span>
                            <input type='text' id="dtpHoraFin" name="HoraSalida" class="form-control" value="@ViewBag.salida" placeholder="Hora de Finalizacion" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Detalles de la Consulta</div>
                <div class="panel-body">
                    <span id="cveMotivo" style="display:none;">@ViewBag.motivo</span>
                    <span id="cveMedicamento" style="display:none;">@ViewBag.medicamento</span>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-thermometer-quarter fa-lg"></i>
                            </span>
                            <select id="cmbMotivo" name="MotivoConsulta" class="form-control">
                                <option value="0">-Motivo-</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-medkit fa-lg"></i>
                            </span>
                            <select id="cmbMedicamentos" name="CveMedicamento" class="form-control">
                                <option value="0">-Medicamento-</option>
                            </select>
                        </div>
                    </div>
                    <div class="well">
                        Cantidad de Medicamentos:
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn btn-defaul disminuir" type="button">
                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                </button>
                            </span>
                            <input type='text' id="txtCantidad" name="CantidadSumintrada" class="form-control" value="@ViewBag.cantidad" placeholder="Cantidad" />
                            <span class="input-group-btn">
                                <button class="btn btn-defaul aumentar" type="button">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">Infomacion de la Consulta Medica </div>
                <div class="panel-body">
                    <input type="hidden" id="txtIdPaciente" name="CvePaciente" value="@ViewBag.idpaciente">
                    <div class="form-group">
                        <label for="txtDiagnostico"><i class="fa fa-heartbeat fa-lg"></i>  Diagnostico:</label>
                        <textarea id="txtDiagnostico" name="Diagnostico" class="form-control" placeholder="Escribe el diagnostico" style="min-width:100%; max-width:100%; min-height:100px; max-height:100px;">@ViewBag.diagnostico</textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtAtendio"><i class="fa fa-user-md fa-lg"></i>  Atendio:</label>
                        <input type="text" id="txtAtendio" name="CveDoctor" class="form-control" placeholder="Escribe tu nombre" />
                    </div>
                    <div class="form-group">
                        <button type="submit" id="btnEditarConsulta" name="EditarConsulta" class="btn btn-block btn-lg btn-primario">Editar Consulta</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="bg-primary" id="snackbar"></div>

@section scripts{
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <!--script src="~/Scripts/moment.js"></script-->
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/scriptsVistas/snackbar.min.js"></script>
    <script src="~/Scripts/scriptsVistas/editarConsulta.js"></script>
}

